@model WypozyczalniaFilmow.Models.wypozyczenia

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>wypozyczenia</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
